# Tuya API credentials (get from platform.tuya.com)
TUYA_CLIENT_ID=your_tuya_client_id
TUYA_CLIENT_SECRET=your_tuya_client_secret
TUYA_BASE_URL=https://openapi.tuyaus.com
TUYA_DEVICE_ID=your_device_id
TUYA_USER_ID=your_user_id

# Supabase credentials (get from supabase.com dashboard)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_service_role_key

# Email configuration (using Resend - get from resend.com)
RESEND_API_KEY=re_xxxxxxxxxx
EMAIL_FROM=Water Tank <water@yourdomain.com>
EMAIL_TO=you@example.com

# Timezone (Costa Rica = UTC-6, no DST)
TIMEZONE=America/Costa_Rica

# Tank configuration (optional overrides)
TANK_COUNT=2
TANK_CAPACITY_LITERS=500
SENSOR_MAX_DEPTH=120
